<h1>Listing runs</h1>


  
<div id="runs">
<%= render :partial => 'run', :collection => @runs %>
</div>

<div id="new">

	<% remote_form_for(:run, :url => {:controller => 'runs', :action => 'create'}, :html => {:id => 'new_form'}) do |f| %>

  <%= f.error_messages %>

  <p>
    <%= f.label :distance %><br />
    <%= f.text_field :distance %>
  </p>
  <p>
    <%= f.label :hours %><br />
    <%= f.text_field :hours %>
  </p>
  <p>
    <%= f.label :minutes %><br />
    <%= f.text_field :minutes %>
  </p>
  <p>
    <%= f.label :seconds %><br />
    <%= f.text_field :seconds %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
  
<% end %>
</div>

<h1>My goal</h1>
<div id="goal">
<%= render :partial => 'goal', :object => @goal %>
</div>



